<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="500dp" android:height="500dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:height="50dp" android:width="50dp" android:gravity="bottom|end">
        <shape android:shape="oval">
            <solid android:color="@color/color_primary_2"/>
        </shape>
    </item>
    <item android:height="50dp" android:width="50dp" android:end="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/color_primary_2"/>
        </shape>
    </item>

</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginEnd="9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/thumbnail_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/color_harmony_2_1"
        app:cardCornerRadius="30dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="135dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/collection_4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                android:layout_gravity="bottom">
                <TextView
                    android:id="@+id/user_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="\@ "
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/thumbnail_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/string_random_title"
                    android:textSize="13sp"
                    android:ellipsize="marquee"
                    android:elegantTextHeight="true"
                    android:maxLength="10"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thumbnail_like_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_like_count_bg"
                android:paddingHorizontal="3dp"
                android:paddingVertical="0.5dp"
                android:layout_gravity="end"
                android:layout_margin="12dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_like"
                    android:scaleType="centerCrop"
                    android:scaleX="0.58"
                    android:scaleY="0.58"
                    />
                <TextView
                    android:id="@+id/thumbnail_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="7dp"
                    android:paddingStart="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/that_little_shit_in_the_bottom_hhh"
        app:layout_constraintTop_toBottomOf="@+id/thumbnail_card"
        app:layout_constraintStart_toStartOf="@+id/thumbnail_card"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="-23dp"
        android:layout_marginStart="17.5dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/color_primary_2"
        android:alpha="0.7"/>
</androidx.constraintlayout.widget.ConstraintLayout>
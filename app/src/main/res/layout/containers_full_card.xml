<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/containers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/draw_containers_bg"
            android:layout_gravity="bottom">
            <LinearLayout
                android:id="@+id/containers_options"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingVertical="12dp"
                android:paddingHorizontal="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.7K"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_gravity="center"
                        android:gravity="center" />
                    <ImageButton
                        android:id="@+id/moon_it"
                        android:layout_marginTop="7dp"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@drawable/ic_like_containers"
                        android:background="@drawable/draw_containers_options"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/bookmark_it"
                        android:layout_marginTop="7dp"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@drawable/ic_bookmark"
                        android:background="@drawable/draw_containers_options"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/comment_it"
                        android:layout_marginTop="7dp"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@drawable/ic_comment"
                        android:background="@drawable/draw_containers_options"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/more_about_it"
                        android:layout_marginTop="7dp"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@drawable/ic_more"
                        android:background="@drawable/draw_containers_options"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/containers_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginEnd="87dp"
                android:paddingVertical="27dp"
                android:paddingHorizontal="10dp">
                <LinearLayout
                    android:id="@+id/user_info_container"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/draw_containers_options"
                            android:padding="7dp"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="37dp"
                            android:outlineSpotShadowColor="@color/color_primary_3">
                            <ImageView
                                android:id="@+id/user_pfp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/draw_containers_options"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/user_name"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:textColor="@color/white"
                                android:text="Fake Username"
                                android:textStyle="bold"
                                android:textSize="17sp"/>
                            <FrameLayout
                                android:id="@+id/user_follow"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:gravity="center">
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/draw_follow_bg" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingVertical="7dp"
                                    android:paddingHorizontal="3.5dp"
                                    android:text="Follow"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/color_harmony_0"
                                    android:textStyle="bold"
                                    android:textSize="15.5sp"/>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <androidx.core.widget.NestedScrollView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="21dp">
                        <TextView
                            android:id="@+id/user_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Midnight nature sight , Love it !\n#Midnight_sight\n#Nature"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:maxLines="1"/>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
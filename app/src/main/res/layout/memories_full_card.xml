<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/memory_image_container"
            app:cardElevation="37dp"
            app:cardMaxElevation="57dp"
            app:cardCornerRadius="27dp"
            android:layout_marginHorizontal="9dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:outlineSpotShadowColor="@color/color_primary_0"
            android:layout_width="match_parent"
            android:layout_height="444dp">
            <ImageView
                android:id="@+id/memory_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/collection_5"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/memory_image_container1"
            app:cardElevation="-1dp"
            android:layout_marginHorizontal="9dp"
            android:outlineSpotShadowColor="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Memory Title"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_primary_2"
                        android:paddingVertical="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:layout_marginVertical="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/draw_memory_options"
                                android:backgroundTint="@color/color_harmony_3"
                                app:cardCornerRadius="65dp"
                                app:cardElevation="57dp"
                                android:outlineSpotShadowColor="@color/color_complementary_1">
                                <ImageView
                                    android:id="@+id/memory_pfp"
                                    android:src="@drawable/pfp2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/draw_containers_options"
                                    android:scaleType="centerCrop"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/memory_owner"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Fake_Username"
                                android:textColor="#a6a6a6"
                                android:layout_marginHorizontal="7dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_margin="7dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/draw_small_circle"
                            android:backgroundTint="#d0d0d0"
                            android:backgroundTintMode="src_over"/>
                        <TextView
                            android:id="@+id/memory_views"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1,250,786 views"
                            android:textColor="@color/color_text_primary_2"
                            android:layout_marginHorizontal="7dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="15dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/draw_recent_files_btn"
                            android:outlineSpotShadowColor="@color/color_complementary_0"
                            android:padding="10dp"
                            android:src="@drawable/ic_like_containers"
                            app:tint="@color/color_harmony_0" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="12dp">
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/color_text_primary_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Likes"
                                android:textStyle="normal"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/memory_likes"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_primary_2_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="37,5K Moons"
                                android:textStyle="bold"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/draw_recent_files_btn"
                            android:outlineSpotShadowColor="@color/color_complementary_0"
                            android:padding="10dp"
                            android:src="@drawable/ic_comment"
                            app:tint="#6a94e1" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="12dp">
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/color_text_primary_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Comments"
                                android:textStyle="normal"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/memory_comments"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_primary_2_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="6,017 Comments"
                                android:textStyle="bold"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_primary_1"
                        android:paddingVertical="5dp"/>
                    <TextView
                        android:id="@+id/memory_description"
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/string_random_text"
                        android:textSize="13.5sp"
                        android:textColor="#a6a6a6"
                        android:lineSpacingExtra="3dp"
                        android:elegantTextHeight="true"
                        android:ellipsize="end"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="7dp"
        android:paddingBottom="37dp"
        android:paddingStart="21dp">

        <LinearLayout
            android:id="@+id/mainChild1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="0dp"
            android:paddingEnd="21dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="6dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:text="Welcome "
                    android:textColor="@color/color_text_complement_1"
                    android:textSize="23sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:text="Serenity,"
                    android:textColor="@color/color_text_complement_1"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="222dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="27dp"
                    android:background="@drawable/draw_collection_container_bg"
                    android:backgroundTintMode="multiply"
                    android:backgroundTint="@color/color_primary_2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:textColor="@color/color_text_complement_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your latest"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                        <TextView
                            android:textColor="@color/color_text_complement_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Containers"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="12dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_profile"
                                android:scaleType="centerCrop"
                                android:scaleX="0.65"
                                android:scaleY="0.65"
                                app:tint="@color/color_text_complement_2"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/color_text_complement_2"
                                android:text="77 images"
                                android:textStyle="bold"
                                android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="12dp">

                            <ImageButton
                                android:id="@+id/your_latest_containers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/draw_fab"
                                android:outlineSpotShadowColor="@color/color_complementary_0"
                                android:padding="10dp"
                                android:src="@drawable/ic_go_right"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="21dp"
                                android:rotation="-12"
                                android:scaleX="0.85"
                                android:scaleY="0.85"
                                android:layout_gravity="top|start">
                                <ImageView
                                    android:id="@+id/collection_2"
                                    android:layout_width="107dp"
                                    android:layout_height="107dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/collection_2"/>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="21dp"
                                android:rotation="3"
                                app:cardElevation="21dp"
                                android:outlineSpotShadowColor="@color/color_complementary_1"
                                android:layout_gravity="center">
                                <ImageView
                                    android:id="@+id/collection_3"
                                    android:layout_width="107dp"
                                    android:layout_height="107dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/collection_3"/>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="21dp"
                                android:rotation="12"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:layout_gravity="bottom|end">
                                <ImageView
                                    android:id="@+id/collection_1"
                                    android:layout_width="107dp"
                                    android:layout_height="107dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/collection_1"/>
                            </androidx.cardview.widget.CardView>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainChild2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="0dp"
            android:layout_marginTop="17dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="17dp"
                android:paddingBottom="3dp"
                android:paddingEnd="21dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/allerta"
                    android:text="Containers"
                    android:textColor="@color/color_text_complement_1"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/see_all_containers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/allerta"
                    android:gravity="end"
                    android:text="See All"
                    android:textColor="#fff200"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:paddingVertical="12dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainChild3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="0dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="21dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/allerta"
                    android:text="Recent files"
                    android:textColor="@color/color_text_complement_1"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/allerta"
                    android:gravity="end"
                    android:text="See All"
                    android:textColor="#fff200"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="21dp"
                android:paddingVertical="12dp"
                android:alpha=".8"
                android:background="@drawable/draw_recent_files_bg">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/draw_recent_files_btn"
                    android:outlineSpotShadowColor="@color/color_complementary_0"
                    android:padding="14dp"
                    android:src="@drawable/ic_recent_files"
                    app:tint="@color/color_text_complement_2"
                    tools:ignore="SpeakableTextPresentCheck" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="17dp">
                    <TextView
                        android:layout_weight="1"
                        android:textColor="@color/color_text_complement_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="Gosick images"
                        android:textStyle="bold"
                        android:textSize="17sp" />
                    <TextView
                        android:layout_weight="1"
                        android:textColor="@color/color_text_complement_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:text="37 images"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>